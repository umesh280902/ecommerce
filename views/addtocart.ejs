      <script>
        function deleteCartItem(cartItemId) {
          const data = { addtocartid: cartItemId };
          const url = "/addtocart";

          fetch(url, {
            method: "DELETE",
            headers: {
              "Content-Type": "application/json"
            },
            body: JSON.stringify(data)
          }).then(response => response.json())
            .then(json => {
              const message = json.message
              alert(message)
              location.reload();
            })
            .catch(error => {
              console.log(error);
            })
        }
      </script>
